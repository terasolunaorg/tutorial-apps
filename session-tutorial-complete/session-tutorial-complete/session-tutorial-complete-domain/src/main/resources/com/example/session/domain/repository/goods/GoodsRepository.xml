<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.session.domain.repository.goods.GoodsRepository">

    <resultMap id="goodsResultMap" type="Goods">
        <id property="id" column="goods_id" />
        <result property="name" column="goods_name" />
        <result property="description" column="description" />
        <result property="categoryId" column="category_id" />
        <result property="price" column="price" />
    </resultMap>

    <select id="findPageByCategoryId" parameterType="int" resultMap="goodsResultMap">
        <![CDATA[
        SELECT
            goods_id,
            goods_name,
            description,
            price
        FROM
            goods
        WHERE
            category_id = #{categoryId}
        ORDER BY
            goods_id
        ]]>
    </select>

    <select id="countByCategoryId" parameterType="int" resultType="_long">
        <![CDATA[
        SELECT
			count(*)
        FROM
            goods
        WHERE
            category_id = #{categoryId}
        ]]>
    </select>
    

    <select id="findOne" parameterType="String" resultMap="goodsResultMap">
        <![CDATA[
        SELECT
        	goods_id,
            goods_name,
            description,
            price
        FROM
            goods
        WHERE
            goods_id = #{id}
        ]]>
    </select>

</mapper>